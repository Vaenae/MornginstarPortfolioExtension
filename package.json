{
  "name": "morningstarportfolioextension",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "dependencies": {},
  "devDependencies": {
    "@types/chrome": "0.0.124",
    "@typescript-eslint/eslint-plugin": "4.2.0",
    "@typescript-eslint/parser": "4.2.0",
    "esbuild": "0.7.7",
    "eslint": "7.10.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-import": "2.22.0",
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2",
    "typescript": "4.0.3"
  },
  "scripts": {
    "build": "node scripts/copy.js && esbuild --bundle src/main.ts --outdir=dist --sourcemap --target=es2017",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier": "prettier \"{src,scripts}/**/*.{js,ts,jsx,tsx,css,json}\"",
    "format": "npm run prettier -- --write",
    "lint": "eslint",
    "lint:fix": "npm run lint -- --fix",
    "validate": "npm run prettier -- --list-different && npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css}": [
      "npm run format",
      "npm run lint:fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vaenae/MorningstarPortfolioExtension.git"
  },
  "author": "Joonas Vanninen",
